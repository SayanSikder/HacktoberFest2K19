#include<stdio.h>
int main()
{
    int rows, i, j, space;
    printf("+++++++Enter number of rows:+++++++\n ");
    scanf("%d",&rows);
    for(i=rows; i>=1; --i)
    {
    	if(i==7)
    	printf("\tP-A-T-T-E-R-N");
    	else
    	{
        for(space=0; space < rows-i; ++space)
            printf("  ");
        for(j=i; j <= 2*i-2; ++j)
        	if(j%2==0)
            printf("O ");
            else
        printf("+ ");
        printf("* ");
		for(j=0; j < i-1; ++j)
		if(j%2==0)
		printf("O ");
		else
		 printf("+ ");
	}
        printf("\n");
    }
    return 0;
}
